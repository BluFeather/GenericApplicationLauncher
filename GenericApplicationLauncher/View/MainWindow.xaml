<Window x:Class="GenericApplicationLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenericApplicationLauncher.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="1000"
        ResizeMode="CanResizeWithGrip">
    <Grid>
        <TabControl Margin="5">
            <TabItem Header="Steam">
                <local:SteamLauncherView/>
            </TabItem>
            <TabItem Header="Other Application">
                <TextBlock Text="No other app implemented for this proof of concept."/>
            </TabItem> 
        </TabControl>
    </Grid>
</Window>
